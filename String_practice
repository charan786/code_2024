#1. Print characters present at an even index number

msg = 'hello'

for i in range(len(msg)): 
	if i % 2 == 0:
		print(msg[i])


#2. Remove first n characters from a string

text = "PYnative"
def remove(n):
	dummy = ''
	for i in range(len(text)):
		if i >= n:
			dummy += text[i]
	return dummy
			
new_text = remove(2)	
print(new_text)

#3. Check if the first and last numbers of a list are the same
num = [1,3,4,5,6,10]
bool = True

if num[0] != num[len(num)-1]:
	bool = False
print(bool)

#4. Find the number of occurrences of a substring in a string
str_x = "Emma is good developer. Emma is a writer"
sub = "Emma"
count = str_x.count(sub)
print(count)


